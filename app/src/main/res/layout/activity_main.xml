<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/input_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="34dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:background="#FD929593"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true">
        


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="C"
                android:textColor="@color/white"
                android:backgroundTint="#F44336"
                android:textAlignment="center"
                android:id="@+id/c_button"
                android:textSize="32dp"

                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#A5A4A4"
                android:textAlignment="center"
                android:id="@+id/open_bracket"
                android:textSize="32dp"
                android:text="("/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#A5A4A4"
                android:textAlignment="center"
                android:id="@+id/close_bracket"
                android:textSize="32dp"
                android:text=")"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/division"
                android:textSize="32dp"
                android:text="/"
                android:backgroundTint="#CEFF5722"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="7"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_7"
                android:textSize="32dp"


                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_8"
                android:textSize="32dp"
                android:text="8"

                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_9"
                android:textSize="32dp"
                android:text="9"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/multiplication"
                android:textSize="25dp"
                android:text="*"
                android:backgroundTint="#CEFF5722"
                />









        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="4"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_4"
                android:textSize="32dp"


                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_5"
                android:textSize="32dp"
                android:text="5"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_6"
                android:textSize="32dp"
                android:text="6"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/addition"
                android:textSize="32dp"
                android:text="+"
                android:backgroundTint="#CEFF5722"
                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="1"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_1"
                android:textSize="32dp"


                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_2"
                android:textSize="32dp"
                android:text="2"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_3"
                android:textSize="32dp"
                android:text="3"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/subtraction"
                android:textSize="32dp"
                android:text="-"
                android:backgroundTint="#CEFF5722"
                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="AC"
                android:textColor="@color/white"
                android:backgroundTint="#F44336"
                android:id="@+id/button_AC"
                android:textSize="18dp"


                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/button_0"
                android:textSize="32dp"
                android:text="0"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#03A9F4"
                android:textAlignment="center"
                android:id="@+id/button_dot"
                android:textSize="32dp"
                android:text="."

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/equalTo"
                android:textSize="32dp"
                android:text="="
                android:backgroundTint="#CEFF5722"
                />







        </LinearLayout>

    </LinearLayout>


</RelativeLayout>